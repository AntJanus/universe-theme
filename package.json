{
  "name": "universe-theme",
  "displayName": "Universe",
  "description": "A dark theme for passionate developers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Universe",
        "uiTheme": "vs-dark",
        "path": "./themes/universe-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^11.11.0",
    "deepmerge": "^3.2.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "build": "npm run ts:build && npm run node:build",
    "node:build": "node dist/index.js",
    "node:watch": "nodemon dist/index.js",
    "ts:build": "tsc",
    "ts:watch": "tsc --watch"
  }
}
